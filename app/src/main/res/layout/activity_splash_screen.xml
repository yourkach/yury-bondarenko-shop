<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SplashScreenActivity">

    <ImageView
        android:id="@+id/splashLogoIv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_transparent_bg_crop" />

    <ProgressBar
        android:id="@+id/splashLoadingBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:indeterminateDrawable="@drawable/circular_progress_bar_black"
        app:layout_constraintBottom_toBottomOf="@+id/splashLogoIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/splashLogoIv" />
</androidx.constraintlayout.widget.ConstraintLayout>